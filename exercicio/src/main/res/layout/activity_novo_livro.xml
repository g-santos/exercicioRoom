<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.exercicio.activity.NovoLivroActivity">

    <EditText
        android:id="@+id/editTitulo"
        android:hint="Titulo do Livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editAutor"
        android:hint="Autor do Livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Gênero:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinnerGenero"
        android:entries="@array/generos_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <EditText
        android:id="@+id/editQuantidadePaginas"
        android:inputType="number"
        android:hint="Quantidade de Páginas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Status:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinnerStatus"
        android:entries="@array/status_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <CheckBox
        android:id="@+id/checkBoxFavorito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorito" />

    <Button
        android:text="Salvar"
        android:onClick="salvarLivro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>